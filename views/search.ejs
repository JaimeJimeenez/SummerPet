<!DOCTYPE html>
<html lang = "es">
<head>
    
    <title> Resultados de búsqueda </title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href = "../style/search.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body id="bgLightBlue"">

    <%- include('partials/header') %>

    <div class = "container-fluid mt-3">

        <% if (usuarios.length === 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                No existen usuarios encontrados con los campos proporcionados
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <ul>
            <% usuarios.forEach((usuario) => { %>
                <a  style="text-decoration: none" href = "/profile?id=<%=usuario.Id%>" class = 'row align-items-center d-block justify-content-center w-75 mx-auto  ' id = 'showProfile'>
                    <li class = 'p-3 mt-3 '>
                    <div class = 'row align-items-center'>
                            <div class = "col col-sm-2 col-md-2 col-xl-2 text-center"> 
                                <% if (!usuario.Photo) { %>
                                    <img src = "/images/noImageUser.png" alt = "Imagen predefinida"  width="80" height="80" class = 'rounded-circle'>
                                <% } else { %>
                                    <img src = "/profilePhoto/<%=usuario.Id%>" alt = "Foto de perfil del usuario" width="80" height="80" class = 'rounded-circle'>
                                <% } %>
                            </div>
                            <div style="font-size: 26px; color:black;" class = "col col-sm-5 col-md-5 col-xl-5 text-center p-2"><b><%= usuario.Name %></b> </div>
                            <div style="font-size: 26px; color:black;" class = "col col-sm-5 col-md-5 col-xl-5 text-center p-2"><b><%= usuario.Direction %></b> </div>
                            <!-- <div style="font-size: 26px; color:black;" class = "col col-sm-3 col-md-3 col-xl-3 text-center p-2"><b><%= usuario.Email %></b> </div> -->
                            <!-- <div style="font-size: 26px; color:black;" class = "col col-sm-4 col-md-4 col-xl-4 text-center p-2"><b><%= usuario.Phone %></b> </div> -->
                    </div>
                </li>
                </a>   
                <!-- <li class = 'd-block justify-content-center align-items-center  bg-light p-4 w-75 mx-auto mb-3 mt-3'>
                    <div class = 'row align-items-center'>
                        <div class = "col col-sm-2 col-md-2 col-xl-2 text-center"> Nombre: <%= usuario.Name %> </div>
                        <div class = "col col-sm-2 col-md-2 col-xl-2 text-center"> Dirección: <%= usuario.Direction %> </div>
                        <div class = "col col-sm-3 col-md-3 col-xl-3 text-center"> Email: <%= usuario.Email %> </div>
                        <div class = "col col-sm-2 col-md-2 col-xl-2 text-center"> Teléfono: <%= usuario.Phone %> </div>
                        <div class = "col offset-1 col-sm col-md col-xl d-flex justify-content-center align-items-center">
                            <a href = "/profile?id=<%=usuario.Id%>" class = 'btn btn-primary'>Ver perfil</a>
                        </div>
                    </div>
                </li> -->
            <%}); %>
        </ul>
    </div>
</body>
</html>