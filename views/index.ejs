<!DOCTYPE html>
<html lang="es">
<head>
    
    <title>SummerPet</title>

    <meta charset="UTF-8">
    <meta name = "viewport" content="width=device-width, initial-scale=1.0">
    
    <link href = "https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel = "icon" href = "/images/favicon.ico">
    <link rel = "stylesheet" href = "../style/index.css">

</head>
<body class = 'bgLightBlue'>

    <div class = "container-fluid">

        <div class = "row" >
            <nav id="bgBlue" class = "navbar">

                <div class = "d-flex justify-content-start ms-1">
                    <a class = 'navbar-brand' href = "/">
                        <img src = "/images/logo.png" alt = "Logo aplicación" class = 'rounded-circle'>
                    </a>
                </div>

                <div class = "d-flex">
                    <% if (locals.user === undefined) { %>
                        <button type = 'button' class = 'btn btn-primary me-2'>
                            <a href = "/user/signIn" class = 'text-decoration-none text-white'> Iniciar sesión </a>
                        </button>
                        <button type = 'button' class = 'btn btn-primary me-2'>
                            <a href = "/user/signUp" class = 'text-decoration-none text-white'> Nueva Cuenta </a>
                        </button>
                    <% } else { %>
                        <div class = "d-flex me-4 dropdown">
                            <button type = "button" class = "btn btn-primary dropdown-toggle" data-bs-toggle = "dropdown">
                                <% if (!user.Photo) { %>
                                    <img src = "/images/noImageUser.png" alt = "Imagen predefinida" class = 'rounded-circle' width="50" height="50">
                                <% } else { %>
                                    <img src = "/user/profilePhoto/<%=locals.user.Id%>" alt = "Foto de perfil del usuario" width="50" height="50" class = 'rounded-circle'>
                                <% } %>
                            </button>
                            <ul class = "dropdown-menu">
                                <li>
                                    <a class = "dropdown-item" href = "#" data-bs-toggle = 'modal' data-bs-target = '#modalEstablish' id = 'establishDisponibilityBtn'> Disponibilidad </a>
                                </li>
                
                                <li>
                                    <a class = "dropdown-item" href = "#" > Especialidades </a>
                                </li>
                    
                                <li>
                                    <a class = "dropdown-item" href = "#"> Lugar </a>
                                </li>
                            </ul>
                        </div>
                    <% } %>
                </div>
            </nav>
        </div>

        <div class = "row text-center bgLightBlue">
            <h1 style = "font-size: 180px" class ="mb-5 text-white"> SummerPet</h1>
        </div>

        <div class = "d-flex justify-content-center bgLightBlue">

            <form method = 'GET' action = 'searchKeyWord' class = "row">

                <div class="col col-sm col-md col-xl">
                    <input class = "form-control form-control-lg " id = 'searchInput' type = "text" list = "datalistOptions" placeholder = "Palabra Clave" name = 'keyword' maxlength="150">
                </div>

                <div class = "col col-sm-1 col-md-1 col-xl-2">
                    <button id = "searchBtn" type = "submit"> <strong>Search</strong> </button>
                </div>

            </form>
        
            <datalist id="datalistOptions">
                <option value="Jaime">
            </datalist>

        </div>

    </div>
</body>
</html>