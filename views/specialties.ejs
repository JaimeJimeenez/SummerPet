<!DOCTYPE html>
<html lang = "es">
<head>
    <title> Perfil </title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href = "../style/profile.css">
    <link rel="stylesheet" href = "../style/locationPhotos.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>

    <%- include('partials/header') %>

    <div class = "container-fluid">
        <div class = "row mt-5" id = 'profileUser'>
            <%- include('partials/profileDesc') %>
            <div class = "col col-sm col-md col-xl">
                <div class = "row">
                    <%- include('partials/navbars/navbarUser') %>
                </div>
                <div class = "mt-3 row p-3" id = 'labelPhotos'>
                    <div class = "col col-sm col-md col-xl">
                        <% usuario.Breeds.forEach((dogBreed) => { %>  
                            <div class = "bg-info col col-sm col-md col-xl mt-4 rounded-2">
                                <h4 class ="ms-3 p-3"> <%= dogBreed %> </h4>
                            </div>
                        <% }) %>
                    </div>
                    <div class = "col col-sm col-md col-xl d-flex justify-content-between align-items-center ">
                        <% usuario.Sizes.forEach((dogSize) => { %>
                                <%if (dogSize === "grande") { %>
                                    <img src = "/images/perroGrande.png" alt = "Imagen de perro grande" width="140" height="140">
                                <% } else if (dogSize === "mediano"){ %>
                                    <img src = "/images/perroMediano.png" alt = "Imagen de perro mediano" width="140" height="140" >
                                <% } else { %>
                                    <img src = "/images/perroPequenio.png" alt = "Imagen de perro pequenio" width="140" height="140">
                                <% } %>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>