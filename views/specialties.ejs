<!DOCTYPE html>
<html lang = "es">
<head>
    <title> Perfil </title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href = "../style/profile.css">
    <link rel="stylesheet" href = "../style/specialties.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>

    <%- include('partials/header') %>

    <div class = "container-fluid">
        <div class = "row mt-5" id = 'profileUser'>
            
            <%- include('partials/profileDesc') %>
            
            <div class = "col col-sm col-md col-xl">
            
                <div class = "row">
                    <%- include('partials/navbars/navbarUser') %>
                </div>
            
                <div class = "mt-3 row p-3" id = 'labelSpecialties'>
                    
                    <div class = "col col-sm col-md col-xl">
                    
                        <div class = "row d-flex justify-content-center text-center">
                            Razas de perros
                            <hr>
                        </div>
                    
                        <div class = "row">
                            <% usuario.Breeds.forEach((dogBreed) => { %>  
                                <div class = "bg-light offset-1 col col-sm col-md col-xl d-flex justify-content-center text-center align-items-center mt-4 rounded-2" id = 'labelBreed'>
                                    <h6 class =" p-3"> <%= dogBreed %> </h4>
                                </div>
                            <% }) %>
                        </div>
                    
                    </div>

                    <div class = "offset-1 col col-sm col-md col-xl">
                        
                        <div class = "row d-flex justify-content-center text-center">
                            Tama√±o de perro
                            <hr>
                        </div>
                        
                        <div class = "row">

                            <% usuario.Sizes.forEach((dogSize) => { %>
                                <div class = "col col-sm-5 col-md-5 col-xl-5 offset-1 ">
                                    <div class = "row d-flex justify-content-center text-center align-items-center">
                                        <%if (dogSize === "grande") { %>
                                            <img src = "/images/bigDog.png" alt = "Imagen de perro grande" width="140" height="140">
                                            <div class = "row d-flex justify-content-center text-center"> Grande </div>
                                        <% } else if (dogSize === "mediano"){ %>
                                            <img src = "/images/mediumDog.png" alt = "Imagen de perro mediano" width = "140" height = "140" >
                                        <% } else { %>
                                            <img src = "/images/smallDog.png" alt = "Imagen de perro pequenio" width = "140" height = "140">
                                        <% } %>
                                    </div>
                                   
                                </div>
                            <% }) %>

                        </div>
                        
                    </div>

                </div>

            </div>

        </div>
    </div>
</body>
</html>